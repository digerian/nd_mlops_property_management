name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:
      input_artifact:
        description: Name of sample to download
        type: string

      output_artifact:
        description: Name for the output artifact
        type: string

      output_description:
        description: Type of the output artifact. This will be used to categorize the artifact in t
        type: string

      output_type:
        description: A brief description of the output artifact
        type: string

      min_price:
        description: A brief description of the output artifact
        type: float

      max_price:
        description: A brief description of the output artifact
        type: float

    command: >-
        python run.py  --input_artifact {input_artifact} \
                              --output_artifact {output_artifact} \
                              --output_description {output_description} \
                              --output_type {output_type} \
                              --min_price {min_price} \
                              --max_price {max_price}
